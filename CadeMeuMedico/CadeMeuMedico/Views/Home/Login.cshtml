
@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="pt-br">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Cade meu medico ? - @ViewBag.Title</title>
    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" />
</head>
<body>
    <div class="navbar navbar-expand-sm navbar-dark navbar-fixed-top bg-dark">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">
                    Cade meu medico? - Área Administrativa
                </a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li id="menuMedicos">

                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="jumbotron">
            <div class="container">
                <h1>Quem é Você</h1>
                <p>&nbsp;</p>
                <div id="status"></div>
                <p>&nbsp;</p>
                <div class="form-group">
                    <form id="form-login" name="form-login"
                            method="get"
                            action="javacript:function()">
                        <label for="txtLogin">Login</label>&nbsp;
                        <input type="text" id="txtLogin" name="txtLogin" value="" />&nbsp;
                        <label for="txtSenha">Senha</label>&nbsp;
                        <input type="password" id="txtSenha" name="txtSenha" /> &nbsp;
                        <a id="botao-entrar" class="btn btn-primary btn-lg">Entrar</a>
                    </form>
                </div>
                </div>
        </div>
    <p style="text-align:center;">
        @Html.ActionLink(
         "Esqueceu sua senha?",
         "EsqueceuSuaSenha",
         "Home",
         null,
         new { @style= "text-align:center;"})
    </p>
    </div>
    <script src="@Url.Content("~/Scripts/jquery-3.0.0.min.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.min.js")"></script>
    <script src="@Url.Content("~/Scripts/LoginHome.js")"></script>
</body>
</html>
